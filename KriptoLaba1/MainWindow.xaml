        <RadioButton Name="polib" Content="Квадрат Полибия" HorizontalAlignment="Left" Margin="46,207,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="caesar" Content="Шифр Цезаря" HorizontalAlignment="Left" Margin="46,230,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="gron"  Content="Шифр Гронсфельда" HorizontalAlignment="Left" Margin="46,250,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="visiner" Content="Шифр Виженера" HorizontalAlignment="Left" Margin="46,270,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="magicsquare" Content="Магический квадрат" HorizontalAlignment="Left" Margin="46,290,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
