        <Button Click="Encrypt_Click" Name="Fuck" Content="Зашифровать" HorizontalAlignment="Left" Margin="262,262,0,0" VerticalAlignment="Top" Width="120" Height="29"/>
        <TextBox Name="key2" HorizontalAlignment="Left" Height="23" Margin="347,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Расшифровать" HorizontalAlignment="Left" Margin="387,262,0,0" VerticalAlignment="Top" Width="120" Height="29" Click="Decrypt_Click"/>
